using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SkillBoxLesson_1._0
{
    internal class Program
    {
        static void Main(string[] args)
        {
            //Задание номер 1
            string fullName = "Bulgakov Danila Andreevich";

            int age = 19;
            decimal scoresProgramming = 72.9m;
            decimal scoresMath = 68.5m;
            decimal scoresPhysics = 87.4m;

            Console.WriteLine($" Full name: {fullName}\n Age: {age} \n Programming scores: {scoresProgramming} \n Math scores: {scoresMath} \n Physich scores: {scoresPhysics} ");
            Console.ReadKey();

            //Задание номер 2
            decimal sumScores = scoresProgramming + scoresMath + scoresPhysics;
            decimal averageScores = sumScores / 3;


            Console.WriteLine($"\n Average =  {averageScores:#.##} ");
            Console.ReadKey();


        }
    }
}
